<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/MiFc"
    style="@style/ActionBar.Solid.Example">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro de Puntos"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold"
                android:id="@+id/textViewRegistro"
                style="@style/Theme.Example"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="60dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_span="0"
                android:text="Registrar lugar"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/textViewRegistrarLugar"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nombreLugarId"
                android:layout_column="3"
                android:hint="Nombre de Lugar"
                style="@style/DropDownListView.Example"
                android:textColor="#ffffff"
                android:layout_gravity="left"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/descripcionId"
                android:layout_column="3"
                android:hint="Descripcion"
                style="@style/DropDownListView.Example"
                android:textColor="#ffffff"
                android:layout_gravity="left"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Coordenadas:"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginLeft="25dip"
                android:id="@+id/textViewCoordenadas"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:id="@+id/textViewCordenadas"

                android:layout_column="0"
                android:hint="Latitud\nLongitud"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar"
                android:id="@+id/buttonRegistro"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mapa"
                android:id="@+id/botonMap"
                android:layout_column="1"
                android:layout_span="3"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imID"
                android:layout_column="3"
                android:layout_gravity="center_horizontal"/>



        </LinearLayout>

    </ScrollView>


    </RelativeLayout>